  -- Update film category of African Egg to Thriller
  
   SELECT film_id
   FROM film
   WHERE title = 'African Egg'
   
   UPDATE film_category
   SET category_id = '17'
   WHERE film_id = 5;
   
   -- Delete the film category mystery, as there are only few records
   DELETE FROM category
   WHERE name = 'Mystery'
   
